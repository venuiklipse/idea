		<property name="ipUserDAO" ref="IpUserDAO" />
		<property name="ipChallengeDAO" ref="IpChallengeDAO" />
	</bean>
	<bean id="rewardsService" class="za.co.idea.ip.ws.RewardsService" lazy-init="false">
