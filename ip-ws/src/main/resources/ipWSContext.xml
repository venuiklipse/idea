		<property name="ipUserDAO" ref="IpUserDAO" />
	</bean>
	<bean id="challengeService" class="za.co.idea.ip.ws.ChallengeService">
		<property name="ipChallengeCatDAO" ref="IpChallengeCatDAO" />
