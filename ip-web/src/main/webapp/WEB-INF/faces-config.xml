<?xml version="1.0" encoding="UTF-8"?>

<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<managed-bean>
		<managed-bean-name>menuListener</managed-bean-name>
		<managed-bean-class>za.co.idea.web.util.MenuListener</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>adminBean</managed-bean-name>
		<managed-bean-class>za.co.idea.web.ui.AdminController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>ideaBean</managed-bean-name>
		<managed-bean-class>za.co.idea.web.ui.IdeaController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/pages/views/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admcu</from-outcome>
			<to-view-id>/pages/views/admin/createUser.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admeu</from-outcome>
			<to-view-id>/pages/views/admin/editUser.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admvu</from-outcome>
			<to-view-id>/pages/views/admin/viewUsers.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admcg</from-outcome>
			<to-view-id>/pages/views/admin/createGroup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admeg</from-outcome>
			<to-view-id>/pages/views/admin/editGroup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admvg</from-outcome>
			<to-view-id>/pages/views/admin/viewGroups.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ideaci</from-outcome>
			<to-view-id>/pages/views/idea/createIdea.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ideaei</from-outcome>
			<to-view-id>/pages/views/idea/editIdea.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ideavw</from-outcome>
			<to-view-id>/pages/views/idea/viewIdeas.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
</faces-config>
